{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:promise/recommended",
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "2018"
    },
    "plugins": [
      "promise",
      "react"
    ],
    "rules": {
        "promise/no-nesting":0,
        "promise/no-return-wrap": [
          "error",
          {
            "allowReject": true 
          }
        ],
        "no-console":0,
        "no-unused-vars": [
            "error",
            {
              "argsIgnorePattern": "^_",
              "varsIgnorePattern": "^_"
            }
        ],
        "max-len": [
            "error",
            {
              "code": 80,
              "tabWidth": 2,
              "ignoreUrls": true
            }
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
